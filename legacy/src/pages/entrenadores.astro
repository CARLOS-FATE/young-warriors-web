---
// src/pages/entrenadores.astro
import Layout from "../layouts/Layout.astro";
import CoachCard from "../features/coaches/components/CoachCard.astro";

interface Coach {
  id: number;
  name: string;
  role: string;
  img: string;
  bio: string;
  quote: string;
}

const response = await fetch(
  `${Astro.url.origin}/api/coaches.js?t=${Date.now()}`,
);

const coachesData = (await response.json()) as Coach[];
---

<Layout
  title="Nuestro Staff de Entrenadores | Young Warriors Club"
  description="Conoce al equipo de entrenadores profesionales y apasionados de Young Warriors Club, dedicados a llevar a cada jugador a su máximo potencial."
>
  <section class="page-header">
    <div class="container-narrow">
      <span>Nuestro Equipo</span>
      <h1>Los Arquitectos de la Victoria</h1>
      <p>
        Un equipo de profesionales dedicados a inspirar, enseñar y guiar a la
        próxima generación de campeones.
      </p>
    </div>
  </section>

  <section class="coaches-gallery container">
    <div class="grid">
      {coachesData.map((coach) => <CoachCard coach={coach} />)}
    </div>
  </section>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }
  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
    text-align: center;
  }
  .page-header {
    background-color: var(--color-bg-muted);
  }
  .page-header span {
    color: var(--color-primary);
    font-weight: 600;
  }
  .page-header h1 {
    font-size: 3rem;
    margin-top: 0.5rem;
  }
  .page-header p {
    margin-top: 1rem;
    font-size: 1.1rem;
    line-height: 1.7;
  }
  .grid {
    display: grid;
    /* Crea 1 columna en móvil, 2 en tablet, y 3 en desktop */
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
</style>
