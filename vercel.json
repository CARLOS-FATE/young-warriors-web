{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.php",
      "use": "@vercel/php"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*).php",
      "headers": [
        { 
          "key": "cache-control", 
          "value": "no-store, no-cache, must-revalidate, max-age=0" 
        }
      ]
    }
  ]
}