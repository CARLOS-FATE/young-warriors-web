// src/pages/admin/index.astro
import jwt from "jsonwebtoken";

// 1. REEMPLAZO DE auth.php
// Verificamos la cookie 'admin_auth_token' que creamos en el login
const token = Astro.cookies.get("admin_auth_token")?.value;
let adminUser;

try {
  // Verificamos el "pase de backstage" (nuestro JWT)
  const payload = jwt.verify(token, import.meta.env.JWT_SECRET_KEY);
  adminUser = payload.username; // Guardamos el nombre de usuario
} catch (error) {
  // Si el token no existe o es inválido, lo redirigimos al login.
  return Astro.redirect("/admin/login?error=auth");
}

// (No necesitamos la conexión a la BD aquí, esta es solo la página del menú)
