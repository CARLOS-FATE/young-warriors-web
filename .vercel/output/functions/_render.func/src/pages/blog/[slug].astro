---
// src/pages/blog/[slug].astro
import Layout from '../../layouts/Layout.astro';

const response = await fetch('/api/posts.php');
const allPosts = await response.json();

// Esta función le dice a Astro qué páginas debe crear en base a los slugs.
export function getStaticPaths() {
  return allPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

// Obtenemos los datos del post específico para esta página.
const { post } = Astro.props;
---
<Layout
  title={post.title}
  description={post.description}
>
  <article class="container-narrow">
    <img src={post.image} alt={post.title} class="hero-image">
    <span class="category">{post.category}</span>
    <h1>{post.title}</h1>
    
    <div class="post-content" set:html={post.content} />
    
  </article>
</Layout>

<style>
  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }
  .hero-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 0.75rem;
  }
  .category {
    display: inline-block;
    margin-top: 2rem;
    color: var(--color-primary);
    font-weight: 600;
  }
  h1 {
    font-size: 3rem;
    margin: 0.5rem 0 2rem;
  }

  /* Estilos para el contenido del post */
  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
  }
  .post-content :global(h3) { /* :global para dar estilo a las etiquetas dentro del HTML */
    font-size: 1.8rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }
</style>